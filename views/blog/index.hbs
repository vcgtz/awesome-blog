{{#> blog/header title="Vicente Gutiérrez | Blog" }}
{{/blog/header}}


<div class="container py-4">
  <div class="row">
    <div class="col-2"></div>

    <div class="col-8">
     <h1 class="text-center">This is my blog!</h1>
      <p class="text-center fw-lighter">Bienvenido a mi blog personal! Aquí me gusta escribir sobre el desarrollo de software, compatir mi experiencias y opiniones personales como desarrollador.</p>
    </div>

    <div class="col-2"></div>
  </div>

  <div class="row">
    <div class="col-2"></div>

    <div class="col-8 text-center">
      {{#each categories}}
            <a class="text-decoration-none text-warning" href="#">{{ this.name }}</a>
            {{#if (isNotLastIndex @index ../categories.length) }}
              •
            {{/if}}
          {{/each}}
    </div>

    <div class="col-2"></div>
  </div>

  <div class="row mt-4">
    <div class="col-2"></div>

    <div class="col-8">
      {{#each posts}}
        <div class="row mb-5">
          <div class="col-12 fw-light">
            {{ humanDate this.createdAt }}
          </div>
          <div class="col-12">
            <h3>
              <a class="text-warning text-decoration-none" href="/blog/{{ this.slug }}">{{ this.title }}</a>
            </h3>

            <p class="fw-light">{{ this.brief }}</p>

            <a href="/blog/{{ this.slug }}" class="btn btn-secondary float-end">
              Continuar leyendo...
            </a>
          </div>
        </div>
      {{/each}}
    </div>

    <div class="col-2"></div>
  </div>
</div>

{{#> blog/footer}}
{{/blog/footer}}
