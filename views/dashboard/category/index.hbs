{{> dashboard/header title="Categories" }}

<div class="border-2 border-dashed border-gray-200 rounded-lg h-full p-4">
  <div>
    <h3 class="text-lg leading-6 font-medium text-gray-900">
      List of categories
    </h3>
    <p class="mt-1 text-sm text-gray-500">
      Most recent categories added
    </p>
  </div>

  <div class="flex flex-col mt-6">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Name
                </th>
                <th scope="col" class="relative px-6 py-3">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody>
              {{#each categories}}
              <tr {{#if (isEven @index)}} class="bg-white" {{else}} class="bg-gray-50" {{/if}}>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  {{ this.name }}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <a href="/dashboard/categories/{{ this.id }}/edit" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                  or
                  <form class="inline-block" method="POST" action="/dashboard/categories/{{ this.id }}?_method=DELETE">
                    <input type="hidden" name="_csrf" value="{{ ../csrfToken }}">
                    <button type="submit" class="text-indigo-600 hover:text-indigo-900">Delete</a>
                  </form>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

{{> dashboard/footer}}
