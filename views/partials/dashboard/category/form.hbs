<form class="space-y-8 divide-y divide-gray-200" method="POST" {{#if category}} action="/dashboard/categories/{{ category.id }}?_method=PUT" {{else}} action="/dashboard/categories" {{/if}}>
  <div class="space-y-8 divide-y divide-gray-200">
    <div>
      <input type="hidden" name="_csrf" value="{{ csrfToken }}">

      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          {{ title }}
        </h3>
        <p class="mt-1 text-sm text-gray-500">
          {{ description }}
        </p>
      </div>

      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-6">
          <label for="name" class="block text-sm font-medium text-gray-700">
            Name
          </label>
          <div class="mt-1">
            <input required type="text" name="name" id="name" autocomplete="name" class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" value="{{ category.name }}">
            {{#if errors.name}}
            <p class="text-sm text-red-500">{{ errors.name }}</p>
            {{/if}}
          </div>
        </div>

        <div class="sm:col-span-6">
          <label for="description" class="block text-sm font-medium text-gray-700">
            Description
          </label>
          <div class="mt-1">
            <textarea required id="description" name="description" rows="3" class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border border-gray-300 rounded-md">{{ category.description }}</textarea>
          </div>
          <p class="mt-2 text-sm text-gray-500">A full description of your category.</p>
          {{#if errors.description}}
          <p class="text-sm text-red-500">{{ errors.description }}</p>
          {{/if}}
        </div>
      </div>
    </div>

    <div class="pt-8">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          Other information
        </h3>
        <p class="mt-1 text-sm text-gray-500">
          Some extra needed information.
        </p>
      </div>

      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-6">
          <label for="slug" class="block text-sm font-medium text-gray-700">
            Slug
          </label>
          <div class="mt-1">
            <input type="text" name="slug" id="slug" autocomplete="slug" class="shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" value="{{ category.slug }}">
          </div>
          <p class="mt-2 text-sm text-gray-500">Leave blank to generate automatically.</p>
        </div>
      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <a href="/dashboard/categories" class="bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        Cancel
      </a>
      <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
        Save
      </button>
    </div>
  </div>
</form>
